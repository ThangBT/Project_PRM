<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateProductActivity"
    android:background="@color/on_sell_item">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tabLayout_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_update">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp">

            <android.support.constraint.Guideline
                android:id="@+id/guideline_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.936" />

            <EditText
                android:id="@+id/input_product_name_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="Tên sản phẩm"
                android:inputType="textPersonName"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView6_update"
                app:layout_constraintEnd_toStartOf="@+id/guideline_update"
                app:layout_constraintHorizontal_bias="0.975"
                app:layout_constraintStart_toEndOf="@+id/textView6_update" />

            <TextView
                android:id="@+id/textView6_update"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Tên sản phẩm:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinnerProductType_update"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/spinner_background"
                app:layout_constraintEnd_toEndOf="@id/guideline_update"
                app:layout_constraintHorizontal_bias="0.975"
                app:layout_constraintStart_toEndOf="@+id/textView7_update"
                app:layout_constraintTop_toBottomOf="@+id/input_product_name_update" />

            <TextView
                android:id="@+id/textView7_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:text="Loại sản phẩm:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6_update" />

            <Spinner
                android:id="@+id/spinnerAddress_update"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_background"
                app:layout_constraintEnd_toEndOf="@id/guideline_update"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView9_update"
                app:layout_constraintTop_toBottomOf="@+id/spinnerProductType_update" />

            <EditText
                android:id="@+id/input_product_price_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="VND"
                android:inputType="numberSigned"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewPrice_update"
                app:layout_constraintEnd_toStartOf="@+id/guideline_update"
                app:layout_constraintHorizontal_bias="0.975"
                app:layout_constraintStart_toEndOf="@+id/textViewPrice_update" />

            <TextView
                android:id="@+id/textViewPrice_update"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:text="Giá sản phẩm:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9_update" />

            <TextView
                android:id="@+id/textView9_update"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:text="Địa điểm:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7_update" />

            <TextView
                android:id="@+id/textView2_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Ảnh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_product_price_update" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_update"
                android:layout_width="307dp"
                android:layout_height="236dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/image_border"
                app:layout_constraintBottom_toTopOf="@+id/input_product_description_update"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView2_update"
                app:layout_constraintTop_toBottomOf="@+id/input_product_price_update"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView4_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Mô tả"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_update" />

            <EditText
                android:id="@+id/input_product_description_update"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/image_border"
                android:ems="10"
                android:gravity="top"
                android:hint="Mô tả"
                android:inputType="text|textMultiLine"
                android:padding="5dp"
                android:selectAllOnFocus="false"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4_update"
                app:layout_constraintEnd_toEndOf="@id/guideline_update"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView4_update" />

            <LinearLayout
                android:id="@+id/view_rd_status"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/input_product_description_update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Trạng thái:" />

                <RadioGroup
                    android:id="@+id/pro_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_weight=".7">

                    <RadioButton
                        android:id="@+id/radioButton_active"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center_vertical"
                        android:checked="false"
                        android:text="Đang bán" />

                    <RadioButton
                        android:id="@+id/radioButton_inactive"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:text="Ngưng bán" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/body_color"
                android:onClick="updateProduct"
                android:text="Cập nhật"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="651dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/view_rd_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>